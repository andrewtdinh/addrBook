h4 CONTACT DETAILS

.row
  .col-xs-3
    form(name='contactForm', novalidate)
      .form-group
        label Full Name: &nbsp;&nbsp; {{contact.name}}
      .form-group
        label Address: &nbsp;&nbsp; {{contact.address}}
      .form-group
        label Birthday: &nbsp;&nbsp; {{contact.bday | date: 'MM-dd-yyyy'}}
      .form-group
        label Phone Number: &nbsp;&nbsp; {{contact.phone}}
      .form-group
        a(href='mailto:{{contact.email}}') Email Address: &nbsp;&nbsp; {{contact.email}}
      .form-group
        a(href='{{contact.webpage}}') Web Page: &nbsp;&nbsp; {{contact.webpage}}
      .form-group
        a(href='{{contact.twitter}}') Twitter Page: &nbsp;&nbsp; {{contact.twitter}}
      .form-group
        a(href='{{contact.facebook}}') Facebook Page: &nbsp;&nbsp; {{contact.facebook}}
  .col-xs-6
      .form-group
        img.profileImg.img-responsive.img-thumbnail(ng-src='{{contact.photo}}')
